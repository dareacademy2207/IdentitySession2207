@model RoleModel
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section Body{
    <form method="post">
        <div class="container">

            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" asp-action="AddRole" />
                    </div>
                </div>
            </div>

        </div>
        </form>

}
